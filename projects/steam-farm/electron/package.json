{
    "name": "steam-farm",
    "version": "3.0.0",
    "description": "Steam Hours & Cards Farming - AdHUB",
    "main": "main.js",
    "author": "Deerpfy",
    "license": "MIT",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux"
    },
    "dependencies": {
        "steam-user": "^5.0.10",
        "steam-totp": "^2.1.2",
        "auto-launch": "^5.0.6"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.adhub.steamfarm",
        "productName": "Steam Farm",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "renderer/**/*",
            "assets/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "nsis": {
            "oneClick": true,
            "allowToChangeInstallationDirectory": false,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        }
    }
}
