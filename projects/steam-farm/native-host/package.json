{
    "name": "adhub-steam-farm-service",
    "version": "2.0.0",
    "description": "WebSocket Service pro Steam Farm - AdHUB (no Extension ID required)",
    "main": "steam-farm-service.js",
    "bin": {
        "steam-farm-service": "steam-farm-service.js",
        "steam-farm-host": "steam-farm-host.js"
    },
    "scripts": {
        "start": "node steam-farm-service.js",
        "start:legacy": "node steam-farm-host.js",
        "build": "npm run build:win && npm run build:linux && npm run build:mac",
        "build:win": "pkg steam-farm-service.js --targets node18-win-x64 --output dist/steam-farm-service-win.exe",
        "build:linux": "pkg steam-farm-service.js --targets node18-linux-x64 --output dist/steam-farm-service-linux",
        "build:mac": "pkg steam-farm-service.js --targets node18-macos-x64 --output dist/steam-farm-service-macos"
    },
    "pkg": {
        "assets": [],
        "outputPath": "dist"
    },
    "dependencies": {
        "steam-user": "^5.0.10",
        "steam-totp": "^2.1.2",
        "argon2-browser": "^1.18.0",
        "ws": "^8.14.2"
    },
    "devDependencies": {
        "pkg": "^5.8.1"
    },
    "author": "Deerpfy",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0"
    }
}
