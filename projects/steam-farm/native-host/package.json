{
    "name": "adhub-steam-farm-host",
    "version": "1.2.0",
    "description": "Native Messaging Host pro Steam Farm - AdHUB",
    "main": "steam-farm-host.js",
    "bin": "steam-farm-host.js",
    "scripts": {
        "start": "node steam-farm-host.js",
        "build": "npm run build:win && npm run build:linux && npm run build:mac",
        "build:win": "pkg . --targets node18-win-x64 --output dist/steam-farm-host-win.exe",
        "build:linux": "pkg . --targets node18-linux-x64 --output dist/steam-farm-host-linux",
        "build:mac": "pkg . --targets node18-macos-x64 --output dist/steam-farm-host-macos"
    },
    "pkg": {
        "assets": [],
        "outputPath": "dist"
    },
    "dependencies": {
        "steam-user": "^5.0.10",
        "steam-totp": "^2.1.2",
        "argon2-browser": "^1.18.0"
    },
    "devDependencies": {
        "pkg": "^5.8.1"
    },
    "author": "Deerpfy",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0"
    }
}
