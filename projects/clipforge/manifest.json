        {
            "name": "Nový projekt",
            "short_name": "Nový",
            "description": "Vytvořit nový video projekt",
            "url": "/projects/clipforge/?action=new",
            "icons": [
                {
                    "src": "assets/icon-new.png",
                    "sizes": "96x96"
                }
            ]
        },
        {
            "name": "Otevřít projekt",
            "short_name": "Otevřít",
            "description": "Otevřít existující projekt",
