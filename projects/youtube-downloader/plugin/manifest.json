{
  "manifest_version": 3,
  "name": "AdHub Youtube Downloader",
  "version": "3.0.0",
  "description": "Rychlý přístup ke stažení YouTube videí přes Cobalt.tools. Zobrazí info o videu a otevře stahování.",
  "author": "AdHub",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "YouTube Downloader - Stáhnout video"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://*.ytimg.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
