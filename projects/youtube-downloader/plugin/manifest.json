{
  "manifest_version": 3,
  "name": "AdHub Youtube Downloader",
  "version": "2.1.0",
  "description": "Stahujte YouTube videa ve vsech formatech a kvalitach - MP4, MP3, WAV a dalsi. Pouziva Cobalt, Invidious a primou extrakci.",
  "author": "AdHub",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "AdHub Youtube Downloader"
  },
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://*.googlevideo.com/*",
    "https://*.ytimg.com/*",
    "http://localhost:*/*",
    "https://deerpfy.github.io/*",
    "https://api.cobalt.tools/*",
    "https://*.cobalt.tools/*",
    "https://invidious.nerdvpn.de/*",
    "https://yewtu.be/*",
    "https://vid.puffyan.us/*",
    "https://invidious.namazso.eu/*",
    "https://inv.nadeko.net/*",
    "https://invidious.private.coffee/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:*/*",
        "https://deerpfy.github.io/*"
      ],
      "js": ["page-bridge.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"]
    },
    {
      "resources": ["page-downloader.js"],
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"]
    }
  ]
}
