{
  "manifest_version": 3,
  "name": "AdHub Multistream Chat Moderator",
  "version": "1.1.0",
  "description": "Moderacni nastroje pro Twitch - ban, timeout, mazani zprav. Pouziva existujici Twitch session.",
  "author": "AdHub",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Multistream Chat Moderator",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.twitch.tv/*",
    "https://twitch.tv/*",
    "https://deerpfy.github.io/adhub/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.twitch.tv/popout/*/chat*",
        "https://www.twitch.tv/embed/*/chat*"
      ],
      "js": ["chat-injector.js"],
      "css": ["chat-injector.css"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://deerpfy.github.io/adhub/*"
      ],
      "js": ["adhub-bridge.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
