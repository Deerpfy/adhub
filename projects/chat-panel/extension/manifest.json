{
  "manifest_version": 3,
  "name": "AdHub YouTube Chat Reader",
  "version": "1.1.1",
  "description": "Cte zpravy z YouTube Live chatu a posila je do AdHub Multistream Chat.",
  "author": "AdHub",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "YouTube Chat Reader"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/live_chat*",
        "https://www.youtube.com/live_chat_replay*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://deerpfy.github.io/adhub/*",
        "https://deerpfy.github.io/adhub"
      ],
      "js": ["adhub-bridge.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
